{
  "name": "react-graphql-container",
  "version": "0.1.0",
  "description": "Higher order component that declaratively provides data to component from GraphQL",
  "main": "dist/index.js",
  "scripts": {
    "build-src": "babel src --ignore __test__ --out-dir ./dist",
    "copy-flow": "flow-copy-source src dist",
    "build": "yarn run build-src && yarn run copy-flow",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Palleter/react-graphql-container.git"
  },
  "keywords": [
    "react",
    "graphql"
  ],
  "author": "Priit Haamer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Palleter/react-graphql-container/issues"
  },
  "homepage": "https://github.com/Palleter/react-graphql-container#readme",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "enzyme": "^2.7.1",
    "flow-bin": "^0.38.0",
    "flow-copy-source": "^1.1.0",
    "jest": "^18.1.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "synchronous-promise": "^1.0.7"
  },
  "babel": {
    "plugins": [
      "transform-flow-strip-types"
    ],
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  }
}
